<h1>Login</h1><br>

<% if @notice %>

  <div style="color: red; font-size: 17px"><%= @notice %></div>
  
<% end %>

<%= form_tag '/login' do %> 
   <lable style="color: blue; margin-right: 45px; display: inline-block; font-size: 17px"> Email: </lable>
    <%= text_field_tag 'email' %><br><br>
    <lable style="color: blue; margin-right: 12px; display: inline-block; font-size: 17px"> Password: </lable>
    <%= text_field_tag 'password' %><br><br>
    <%= submit_tag 'login' %>
<% end %><br>
